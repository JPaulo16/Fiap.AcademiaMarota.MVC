@model Fiap.AcademiaMarota.MVC.ViewModel.ProfessorViewModel
@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h4>Informações do Professor</h4>
    </div>
    <div class="panel-body">
        @Html.ValidationSummary()
        @using (Html.BeginForm("Editar", "Professor"))
        {
            @Html.HiddenFor(c => c.ProfessorId)
            @Html.HiddenFor(c => c.EnderecoId)
            <div class="row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(c => c.Nome)
                    @Html.TextBoxFor(c => c.Nome,
                new
                {
                    @class = "form-control",
                })
                    @Html.ValidationMessageFor(c => c.Nome)
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(c => c.DataAdmissao)
                    @Html.TextBoxFor(c => c.DataAdmissao,
                new
                {
                    @class = "form-control",
                })
                    @Html.ValidationMessageFor(c => c.DataAdmissao)
                </div>
                <div class="form-group col-md-12">
                    @Html.LabelFor(c => c.Email)
                    @Html.TextBoxFor(c => c.Email,
                new
                {
                    @class = "form-control",
                })
                </div>
                <div class="panel-heading">
                    <h4>Modalidades</h4>
                </div>
                <div class="col-md-12">

                    @{
            bool[] N = new bool[Model.ListaModalidade.Count()];
            for (int i = 0; i < Model.ListaModalidade.Count(); i++)
            {
                for (int j = 0; j < Model.Modalidades.Count(); j++)
                {
                    if (Model.ListaModalidade.ToList()[i] == Model.Modalidades.ToList()[j])
                    {
                        N[i] = true;
                        break;
                    }
                    else
                    {
                        N[i] = false;
                    }
                }

            }
            for (int i = 0; i < Model.ListaModalidade.Count(); i++)
            {
                @Html.CheckBox("CheckBox", N[i])
                        @Html.Label(Model.ListaModalidade.ToList()[i].Titulo as string)<span> | </span>
            }
                    }
                </div>
                <div class="panel-heading">
                    <h4>Endereço</h4>
                </div>
                <div class="form-group col-md-12">
                    @Html.LabelFor(c => c.Logradouro)
                    @Html.TextBoxFor(c => c.Logradouro,
                new
                {
                    @class = "form-control",
                    placeholder = "Digite o logradouro"
                })
                    @Html.ValidationMessageFor(c => c.Logradouro)
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(c => c.Cep)
                    @Html.TextBoxFor(c => c.Cep,
                new
                {
                    @class = "form-control",
                    placeholder = "00000-000"
                })
                    @Html.ValidationMessageFor(c => c.Cep)
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(c => c.Cidade)
                    @Html.TextBoxFor(c => c.Cidade,
                new
                {
                    @class = "form-control",
                    placeholder = "Digite a cidade"
                })
                </div>
                <div class="form-group col-md-2">
                    @Html.LabelFor(c => c.Estado)
                    @Html.DropDownListFor(c => c.Estado, Model.Estados, "Selecione..",
                new
                {
                    @class = "form-control",
                })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(c => c.Celular)
                    @Html.TextBoxFor(c => c.Celular,
                new
                {
                    @class = "form-control",
                    placeholder = "(00)00000-0000"
                })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(c => c.Telefone)
                    @Html.TextBoxFor(c => c.Telefone,
                new
                {
                    @class = "form-control",
                    placeholder = "(00)0000-0000"
                })
                </div>
                <div class="form-group col-md-12">
                    @SubmitHelper.Submit("Atualizar", "btn-success")
                    @Html.ActionLink("Cancelar", "Listar", null, new { @class = "btn btn-default" })
                </div>

            </div>
        }
    </div>
</div>
