@model Fiap.AcademiaMarota.MVC.Models.Aluno


@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@Html.ActionLink("Lista de Alunos", "Listar")
<div class="@TempData["teste"]">
    @TempData["msg"]
</div>
@{
    if (@ViewBag.Ind != null)
    {
        using (Html.BeginForm("Alterar", "Aluno"))
        {
            <br />
            <div class="row">
                <div class="form-group col-md-2">
                    @Html.TextBox("Indice", "",
              new
              {
                  @class = "form-control",
                  @Value = @ViewBag.Ind,
                  Readonly = "readonly"
              })
                </div>
            </div>
            <div class="row">


                <div class="form-group col-md-6">
                    @Html.LabelFor(c => c.Nome)
                    @Html.TextBoxFor(c => c.Nome,
                new
                {
                    @class = "form-control",
                    @Value = @ViewBag.Nome

                })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(c => c.Cpf)
                    @Html.TextBoxFor(c => c.Cpf,
                new
                {
                    @class = "form-control",
                    @Value = @ViewBag.Cpf
                })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(c => c.DataNascimento)
                    @Html.TextBoxFor(c => c.DataNascimento,
                new
                {
                    @class = "form-control",
                    @Value = @ViewBag.DataNascimento
                })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(c => c.Modalidade)
                    @Html.DropDownListFor(c => c.Modalidade, ViewBag.Modalidades as SelectList, "Selecione..",
            new
            {
                @class = "form-control",
                @Value = @ViewBag.Modalidade
            })
                </div>
                <div class="form-group col-md-12">
                    @Html.LabelFor(c => c.Endereco)
                    @Html.TextBoxFor(c => c.Endereco,
                new
                {
                    @class = "form-control",
                    @Value = @ViewBag.Endereco
                })
                </div>
                <div class="form-group col-md-12">
                    @Html.LabelFor(c => c.Obs)
                    @Html.TextAreaFor(c => c.Obs,
                new
                {
                    @class = "form-control",
                    @Value = @ViewBag.Obs
                })
                </div>
                <div class="form-group col-md-2">
                    @Html.CheckBoxFor(c => c.Especial,
            new
            {
                @Value = @ViewBag.Especial
            })
                    @Html.LabelFor(c => c.Especial)
                </div>
                <div class="form-group col-md-12">
                    @Helpers.Submit("Atualizar")
                </div>
            </div>
        }
    }
    else
    {
        if (ViewBag.msg == null)
        {
            <div class="alert alert-info" role="alert">
                Nenhum aluno selecionado
            </div>
        }
        else
        {
            <div class="alert alert-success" role="alert">
                Registro atualizado!
            </div>
        }
    }
}
